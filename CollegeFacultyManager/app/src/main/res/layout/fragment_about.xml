<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aboutLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/totalCoursesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Courses: 0"
        android:textSize="18sp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/totalStudentsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Students: 0"
        android:textSize="18sp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/exportAllButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export All Data" />

    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Name: College Faculty Manager"
        android:textSize="16sp"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/developerNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developer Name: Kartikey Baghel / World of Technology Science"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/versionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version: 1.0.0"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

</LinearLayout>
